{
  "name": "graphql-server",
  "version": "0.0.0",
  "description": "GraphQL Server for all ground-control microservices",
  "main": "index.ts",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**'",
    "lint:fix": "npm run lint -- --fix",
    "generate": "npm run generate:api && npm run generate:codegen",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "generate:api": "swagger-typescript-api -p ../planet/target/docs/schema.json -o src/__generated__/dataSources/Planet --templates=./templates/ --modular",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ci": "npm run generate && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "ground-control"
  ],
  "author": "Jonathan Geoffroy",
  "license": "MIT",
  "dependencies": {
    "apollo-datasource-rest": "^0.14.0",
    "apollo-server": "^2.25.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.7",
    "swagger-typescript-api": "^9.1.2",
    "typescript": "^4.3.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@graphql-codegen/introspection": "1.18.2"
  }
}
