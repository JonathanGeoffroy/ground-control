{
  "name": "graphql-server",
  "version": "0.0.0",
  "description": "GraphQL Server for all ground-control microservices",
  "main": "index.ts",
  "scripts": {
    "start": "concurrently 'npm:start:webpack' 'npm:start:nodemon'",
    "start:nodemon": "nodemon -r ./.env ./dist/index.js",
    "start:webpack": "webpack --config webpack.development.js",
    "build": "webpack --config webpack.production.js",
    "build:all": "npm install && npm run generate && npm run build",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "generate": "npm run generate:api && npm run generate:codegen",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "generate:api": "node ./scripts/generate",
    "test": "jest",
    "ci": "npm run generate && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "ground-control"
  ],
  "author": "Jonathan Geoffroy",
  "license": "MIT",
  "dependencies": {
    "apollo-datasource-rest": "^0.14.0",
    "apollo-server": "^2.25.0",
    "bufferutil": "^4.0.3",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5",
    "utf-8-validate": "^5.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "graphql-tag": "^2.12.4",
    "jest": "^27.0.4",
    "jest-transform-graphql": "^2.1.0",
    "msw": "^0.29.0",
    "nodemon": "^2.0.7",
    "openapi-backend": "^4.1.0",
    "rollup": "^2.51.2",
    "swagger-typescript-api": "^9.1.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
